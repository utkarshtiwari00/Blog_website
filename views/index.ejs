<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog_Website</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <div class="container mt-4">
        <!-- Heading Section -->
        <div class="text-center mb-4">
            <h1>Welcome to Our Blog Website</h1>
            <a href="/article/new" class="btn btn-success mt-3">New Article</a>
        </div>

        <!-- Blog Posts -->
        <div class="row">
            <% article.forEach(element => { %>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title"><u><%= element.title.substring(0,20) %></u></h5>
                        <p class="card-text"><%= element.des.substring(0,80).concat('...') %></p>
                        <h6 class="card-subtitle mb-2 text-muted">
                            <i><%= new Date(element.createdAt).toLocaleDateString() %></i>
                        </h6>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a class="btn btn-success" href="/article/<%= element.slug %>">Read more</a>
                        <a class="btn btn-info" href="/article/edit/<%= element.id %>">Edit</a>
                        <a class="btn btn-danger" href="/article/delete/<%= element.id %>">Delete</a>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</body>

</html>

